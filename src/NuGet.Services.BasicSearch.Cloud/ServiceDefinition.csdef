<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="NuGet.Services.BasicSearch.Cloud" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="NuGet.Services.BasicSearch" vmsize="Standard_D3_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HttpEndpoint" endpointName="HttpEndpoint" />
        </Bindings>
      </Site>
    </Sites>
    <Startup>
      <Task commandLine="SslConfig.cmd" executionContext="elevated" taskType="simple" />
      <Task commandLine="Startup.cmd" executionContext="elevated" taskType="simple" />
    </Startup>
    <ConfigurationSettings>
      <Setting name="Storage.Primary" />
      <Setting name="Search.IndexContainer" />
      <Setting name="Search.DataContainer" />
      <Setting name="Search.IndexRefresh" />
      <Setting name="Search.RegistrationBaseAddress" />
      <Setting name="serilog-Elasticsearch.nodeUris" />
      <Setting name="serilog-Elasticsearch.username" />
      <Setting name="serilog-Elasticsearch.password" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="HttpEndpoint" protocol="http" port="80" />
      <InstanceInputEndpoint name="InstanceHttp" protocol="tcp" localPort="80">
        <AllocatePublicPortFrom>
          <FixedPortRange min="8080" max="8100" />
        </AllocatePublicPortFrom>
      </InstanceInputEndpoint>
    </Endpoints>
  </WebRole>
</ServiceDefinition>